# Base image
FROM dunglas/frankenphp:php8.4 AS builder

ARG UID=1000
ARG GID=1000
ARG APP_ENV=development

RUN groupadd -g ${GID} appgroup \
 && useradd -u ${UID} -g appgroup -ms /bin/bash appuser

WORKDIR /app

# Install dependencies & PHP extensions
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl unzip nano git ca-certificates gnupg \
    libpq-dev libonig-dev libssl-dev libxml2-dev \
    libcurl4-openssl-dev libicu-dev libzip-dev libexif-dev \
    libjpeg-dev libpng-dev libfreetype6-dev \
 && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
 && apt-get install -y nodejs \
 && docker-php-ext-configure gd --with-freetype --with-jpeg \
 && docker-php-ext-install -j$(nproc) \
    pcntl pdo_mysql pdo_pgsql pgsql opcache intl zip bcmath soap exif gd \
 && pecl install redis \
 && docker-php-ext-enable redis \
 && apt-get autoremove -y && apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Composer latest
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Copy source code
COPY . .

# Set permission folder Laravel yang perlu write
RUN chown -R appuser:appgroup /app \
 && find /app/storage /app/bootstrap/cache /app/public -type d -exec chmod 775 {} \; \
 && find /app/storage /app/bootstrap/cache /app/public -type f -exec chmod 664 {} \;

# Switch user
USER appuser

# Install composer dependencies termasuk dev packages
RUN composer install --optimize-autoloader --classmap-authoritative --no-interaction

EXPOSE 80 443

ENTRYPOINT ["php", "artisan", "octane:frankenphp"]
CMD ["--port=8000", "--workers=4", "--max-requests=1000"]
